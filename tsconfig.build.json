{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src"
    // "composite": false, // Se elimina ya que no se usa extends y no hay project references directas aqu√≠
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}